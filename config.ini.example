# ============================================================================
# Packing Tool Configuration File
# ============================================================================
#
# SETUP INSTRUCTIONS:
# 1. Copy this file to 'config.ini' (remove .example extension)
# 2. Adjust FileServerPath below if your network location is different
# 3. Save and restart the application
#
# ============================================================================

[Network]
# ============================================================================
# File Server Path - CHANGE THIS IF YOUR NETWORK LOCATION IS DIFFERENT
# ============================================================================
#
# This is where all client profiles, SKU mappings, and session data are stored.
# Use UNC path format: \\SERVER\SHARE\PATH
#
# Default: \\192.168.88.101\Z_GreenDelivery\WAREHOUSE\2Packing-tool
#
# The application will create this structure inside:
#   CLIENTS/     - Client profiles and SKU mappings
#   SESSIONS/    - Packing sessions organized by client
#
FileServerPath = \\192.168.88.101\Z_GreenDelivery\WAREHOUSE\2Packing-tool

# Connection timeout in seconds (increase if server is slow)
ConnectionTimeout = 5

# Local cache directory (advanced users only)
# Leave empty to use default: %USERPROFILE%\.packers_assistant\cache
LocalCachePath =

[Logging]
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LogLevel = INFO

# Log retention days (older logs will be deleted)
LogRetentionDays = 30

# Maximum log file size in MB
MaxLogSizeMB = 10

[General]
# Application environment: development or production
Environment = production

# Enable debug mode (more verbose output)
DebugMode = false

[UI]
# Remember last selected client on startup
RememberLastClient = true

# Auto-refresh interval for session list (seconds, 0 = disabled)
AutoRefreshInterval = 0
